rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ⭐ GLOBAL ADMIN OVERRIDE ⭐
    function isAdmin() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // ================================
    //        contactMessages
    // ================================
    match /contactMessages/{messageId} {
      // Admins can do everything
      allow read, write: if isAdmin();

      // User can create messages
      allow create: if request.auth != null;

      // User can read their own messages
      allow read: if request.auth != null &&
                   request.auth.uid == resource.data.userId;

      // No one can update/delete except admin (handled above)
      allow update, delete: if false;
    }

    // ================================
    //          user_reports
    // ================================
    match /user_reports/{reportId} {
      // Admin override
      allow read, write: if isAdmin();

      // Public can read reports
      allow read: if true;

      // Logged-in users can create
      allow create: if request.auth != null;

      // Owner can update/delete
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // ================================
    //          subscriptions
    // ================================
    match /subscriptions/{subscriptionId} {
      // Admin override
      allow read, write: if isAdmin();

      // Logged-in users can create
      allow create: if request.auth != null;

      // Owner can read/update/delete
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // ================================
    //              users
    // ================================
    match /users/{userId} {
      // Admin can do anything
      allow read, write: if isAdmin();

      // Logged-in users can read all users
      allow read: if request.auth != null;

      // Users can update their own record
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ================================
    //     DEFAULT DENY EVERYTHING
    // ================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
